---
import Layout from "../layouts/Layout.astro";
import Banner from "../layouts/banner/index.astro";
---

<style>
	.icon_flex {
		display: flex;
		gap: 10px;
	}

	@media only screen and (max-width: 480px) {
		.icon_container {
			width: 100%;
		}

		.icon_flex {
			flex-direction: column;
		}
	}
</style>
<Layout>
	<main>
		<Banner
			image="--url: url(/6.png); background-size: cover; background-position:right;"
		>
			<h2>LIL G-MES</h2>
			<img src="/7.jpg" alt="" />
			<h3>ASCOLTA LE HAINE</h3>
			<iframe src="https://www.youtube.com/embed/UD0-55PIbuE"> </iframe>
			<div class="icon_container">
				<a
					href="https://www.youtube.com/watch?v=UD0-55PIbuE"
					target="_blank"
				>
					<i class="fab fa-youtube" style="background-color: #ff0000">
						YOUTUBE</i
					>
				</a>
			</div>
		</Banner>
		<Banner image="--url: url(/1.jpg);">
			<h3>ASCOLTA FAME AMARA</h3>
			<iframe src="https://www.youtube.com/embed/cDISLZ4Whfk"> </iframe>
			<div class="icon_container">
